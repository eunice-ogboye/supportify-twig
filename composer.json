
{
    "name": "supportly/ticket-management",
    "description": "Supportly Ticket Management System with Twig",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0 || ^8.1 || ^8.2",
        "twig/twig": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "platform-check": false
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}