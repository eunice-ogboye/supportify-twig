{% extends "base.twig" %}

{% block title %}Welcome to Supportly{% endblock %}

{% block styles %}
<style>
    body {
        max-width: 1440px;
        margin: 0 auto;
        background: #f8fafc;
    }

    .alert {
        padding: 16px 20px;
        border-radius: 8px;
        font-size: 15px;
        line-height: 1.5;
        margin: 20px auto;
        max-width: 800px;
    }

    .alert-success {
        background: #d1fae5;
        color: #065f46;
        border: 1px solid #a7f3d0;
    }

    .alert strong {
        font-weight: 600;
        display: block;
        margin-bottom: 5px;
    }

    .hero-section {
        position: relative;
        padding: 120px 20px 180px;
        text-align: center;
        background: #f8fafc;
        overflow: hidden;
    }

    /* Decorative circle - top left */
    .hero-section::before {
        content: '';
        position: absolute;
        top: -80px;
        left: -80px;
        width: 280px;
        height: 280px;
        background: #dbeafe;
        border-radius: 50%;
        z-index: 0;
    }

    /* Wave background using clip-path */
    .hero-section::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 250px;
        background: linear-gradient(180deg, #0ea5e9 0%, #06b6d4 100%);
        clip-path: ellipse(100% 100% at 50% 100%);
        z-index: 0;
    }

    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 900px;
        margin: 0 auto;
    }

    .hero-section h1 {
        font-size: 56px;
        font-weight: 700;
        margin-bottom: 30px;
        color: #1e293b;
        line-height: 1.2;
    }

    .hero-section h1 .highlight {
        color: #0ea5e9;
    }

    .hero-section p {
        font-size: 20px;
        color: #64748b;
        max-width: 750px;
        margin: 0 auto 50px;
        line-height: 1.6;
    }

    .hero-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
    }

    .btn-hero-primary {
        background: #0ea5e9;
        color: white;
        padding: 16px 40px;
        border: none;
        border-radius: 8px;
        font-size: 18px;
        font-weight: 500;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s;
    }

    .btn-hero-primary:hover {
        background: #0284c7;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(14, 165, 233, 0.4);
    }

    .btn-hero-secondary {
        background: white;
        color: #0ea5e9;
        padding: 16px 40px;
        border: 2px solid #0ea5e9;
        border-radius: 8px;
        font-size: 18px;
        font-weight: 500;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s;
    }

    .btn-hero-secondary:hover {
        background: #f0f9ff;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(14, 165, 233, 0.2);
    }

    .features-section {
        padding: 100px 20px;
        background: white;
    }

    .features-section h2 {
        text-align: center;
        font-size: 48px;
        font-weight: 700;
        margin-bottom: 80px;
        color: #1e293b;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 40px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .feature-box {
        background: #f8fafc;
        padding: 50px 35px;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        transition: all 0.3s;
    }

    .feature-box:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .feature-icon {
        font-size: 40px;
        margin-bottom: 25px;
        display: block;
    }

    .feature-box h3 {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 20px;
        color: #1e293b;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

    .feature-box h3 .icon-text {
        color: #0ea5e9;
    }

    .feature-box p {
        color: #64748b;
        line-height: 1.7;
        font-size: 16px;
    }

    .footer-section {
        background: #0ea5e9;
        padding: 30px 20px;
        text-align: center;
    }

    .footer-section p {
        color: white;
        font-size: 16px;
        margin: 0;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .hero-section h1 {
            font-size: 36px;
        }

        .hero-section p {
            font-size: 18px;
        }

        .features-section h2 {
            font-size: 32px;
        }

        .hero-buttons {
            flex-direction: column;
            width: 100%;
            max-width: 300px;
            margin: 0 auto;
        }

        .btn-hero-primary,
        .btn-hero-secondary {
            width: 100%;
        }

        .features-grid {
            grid-template-columns: 1fr;
        }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
        .features-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>
{% endblock %}

